<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/bg_mypage"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="29.83sp"
                android:textColor="#000000"
                android:layout_marginTop="21.49dp"
                android:layout_marginLeft="26.66dp"
                android:text="My Page"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/setting_image_view"
                    android:layout_width="27.91dp"
                    android:layout_height="27.91dp"
                    android:layout_marginTop="21.49dp"
                    android:layout_marginRight="29.83dp"
                    android:src="@drawable/ic_settings"
                    android:layout_gravity="right"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_view"
                android:layout_marginLeft="26.66dp"
                android:layout_marginRight="26.66dp"
                android:layout_marginTop="44.91dp"
                android:layout_width="124.1625dp"
                android:layout_height="124.1625dp"
                android:src="@drawable/backtest"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:id="@+id/profile_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginTop="42dp"
                        android:textSize="21.49sp"
                        android:text="Sarah Nguyen"
                        />
                    <ImageView
                        android:id="@+id/edit_name_image_view"
                        android:layout_width="25.66dp"
                        android:layout_height="25.66dp"
                        android:layout_marginTop="42dp"
                        android:src="@drawable/ic_edit"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/profile_nation_language_text_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="13.79sp"
                    android:textColor="#000000"
                    android:text="United Kingdom - English"
                    />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27.91dp"
            android:text="Language"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/profile_language1_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.66dp"
                app:cardElevation="10.58dp"
                app:cardCornerRadius="10.58dp"
                app:cardBackgroundColor="#ffffff">
                <TextView
                    android:id="@+id/profile_language1_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="15.07dp"
                    android:paddingLeft="17dp"
                    android:paddingBottom="13.79dp"
                    android:paddingTop="10.58dp"
                    android:text="English"
                    android:textSize="15.07sp"
                    android:textColor="#000000" />

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/profile_language2_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.83dp"
                app:cardElevation="10.58dp"
                app:cardCornerRadius="10.58dp"
                app:cardBackgroundColor="#ffffff">
                <TextView
                    android:id="@+id/profile_language2_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="15.07dp"
                    android:paddingLeft="17dp"
                    android:paddingBottom="13.79dp"
                    android:paddingTop="10.58dp"
                    android:text="Spanish"
                    android:textSize="15.07sp"
                    android:textColor="#000000" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/profile_language3_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.83dp"
                app:cardElevation="10.58dp"
                app:cardCornerRadius="10.58dp"
                app:cardBackgroundColor="#ffffff">
                <TextView
                    android:id="@+id/profile_language3_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="15.07dp"
                    android:paddingLeft="17dp"
                    android:paddingBottom="13.79dp"
                    android:paddingTop="10.58dp"
                    android:textSize="15.07sp"
                    android:text="Korean"
                    android:textColor="#000000" />
            </android.support.v7.widget.CardView>



            <ImageView
                android:id="@+id/edit_language_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="12.83dp"
                android:src="@drawable/btn_edit_language"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                />

            <ImageView
                android:id="@+id/edit_introduction_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_edit"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.66dp"
            android:layout_marginRight="25.66dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15.07dp"
            app:cardElevation="10.58dp"
            app:cardCornerRadius="10.58dp"
            app:cardBackgroundColor="#ffffff">

            <TextView
                android:id="@+id/introduction_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:text="Hi, I'm from London, UK.\nLooking for friends who can help my trip.\nCurrently in Hongdae. Text me."/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12.83dp"
            android:text="Trip Card"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27.91dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="40.74dp"
            app:cardElevation="10.58dp"
            app:cardCornerRadius="10.58dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27.91dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="40.74dp"
            app:cardElevation="10.58dp"
            app:cardCornerRadius="10.58dp"
            app:cardBackgroundColor="#ffffff">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="27.91dp"
            android:layout_marginBottom="79.24dp"
            android:layout_marginRight="40.74dp"
            app:cardElevation="10.58dp"
            app:cardCornerRadius="10.58dp"
            app:cardBackgroundColor="#ffffff">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>