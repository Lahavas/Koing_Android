<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="360dp"
            android:layout_height="640dp"
            android:background="@drawable/bg_mypage"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="24dp"
                    android:text="My Page"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/setting_button"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/ic_settings"
                        android:layout_gravity="right"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image_view"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="42dp"
                    android:layout_width="116dp"
                    android:layout_height="116dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/profile_name_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginTop="75dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="20sp"
                            android:text="Sarah Nguyen"
                            />
                        <Button
                            android:id="@+id/edit_name_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="72dp"
                            android:background="@drawable/ic_edit"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/profile_nation_language_text_view"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#1c1c1c"
                        android:text="United Kingdom \u2022 English"
                        />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Language"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="24dp"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="14dp">

                <TextView
                    android:id="@+id/profile_language1_text_view"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="-6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="28dp"
                    android:gravity="center"
                    android:text="English"
                    android:textSize="14sp"
                    android:background="@drawable/img_textbox"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/profile_language2_text_view"
                    android:layout_width="100dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="-8dp"
                    android:layout_marginTop="-6dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="28dp"
                    android:gravity="center"
                    android:text="Spanish"
                    android:textSize="14sp"
                    android:background="@drawable/img_textbox"
                    android:textColor="#000000"
                    />

                <Button
                    android:id="@+id/edit_language_button"
                    android:layout_width="63dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="-8dp"
                    android:background="@drawable/btn_edit_language"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    />

                <Button
                    android:id="@+id/edit_introduction_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="3.2dp"
                    android:layout_marginTop="7.17dp"
                    android:background="@drawable/ic_edit"/>
            </LinearLayout>


            <TextView
                android:id="@+id/introduction_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:paddingTop="25dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="35dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#000000"
                android:textSize="14sp"
                android:background="@drawable/img_textbox"
                android:text="Hi, I'm from London, UK.\nLooking for friends who can help my trip.\nCurrently in Hongdae. Text me."/>


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="13dp"
                android:text="Trip Card"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="9dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-10dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-10dp"
                android:paddingTop="18dp"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:paddingBottom="34dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/img_textbox">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seoul"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#808080"
                    android:text="Tourist Attractions/Cultural Facilities"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="FR > EN KR"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>