<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342.32dp"
    android:layout_height="404.25dp"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19.25sp"
        android:textColor="#000000"
        android:layout_marginTop="21.49dp"
        android:layout_marginLeft="25.66dp"
        android:text="Introduction"
        />

    <EditText
        android:id="@+id/introduction_edit_text"
        android:layout_width="291dp"
        android:layout_height="255dp"
        android:layout_marginLeft="25.66dp"
        android:textColor="#000000"
        android:textColorHint="#888888"
        android:hint="Ex) Travel Style etc..."
        android:gravity="top"
        />

    <TextView
        android:id="@+id/introduction_ok_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19.25sp"
        android:textColor="#ff523d"
        android:text="OK"
        android:layout_gravity="center"
        />
</LinearLayout>
